entrypoint = "backend/server.js"          # Correct: Points to your server.js in the backend folder
modules = ["nodejs-22"]
hidden = [".config", "package-lock.json"]

[gitHubImport]
requiredFiles = [".replit", "replit.nix", "package.json", "package-lock.json"]

[nix]
channel = "stable-24_11"

[deployment]
run = [
  "node",
  "backend/server.js",
] # Correct: Specifies running server.js for deployment
deploymentTarget = "autoscale"
ignorePorts = false

[[ports]]
localPort = 3000
externalPort = 80
